@model List<HelpDesk.Models.Customers>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Customer</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
    </tr>
  
    @foreach (var customer in Model)
    {
    <tr>
        <td>@customer.Name</td>
        <td>@customer.Address</td>
        <td>@customer.Phone</td>
        <td>@customer.Email</td>
    </tr>
     }
</table>

<p><a asp-controller="Customer" asp-action="Add">Add Customers</a></p>
<p><a asp-controller="Customer" asp-action="Remove">Delete Customers</a></p>
<p><a asp-controller="HelpDesk">Home</a></p>